section#write
  .landing-wrap
    .blog-wrap
      |{% for post in site.posts limit: 3 %}
      |   <div class="post">
      |     <h2>
      |       <a href="{{site.baseurl}}{{post.url}}" rel="bookmark" title="Permanent Link to {{site.baseurl}}{{post.url}}">
      |       {{ post.title }}</a></h2>
      |       <p class="date"> <time itemprop="dateCreated" datetime="{{post.date}}">
      |         {{ post.date | date_to_string }}</time></p>
      |       <p class="copy">
      |         {% if post.content contains '<!--excerpt.start-->' and post.content contains '<!--excerpt.end-->' %}
      |         	{{ ((post.content | split:'<!--excerpt.start-->' | last) | split: '<!--excerpt.end-->' | first) | strip_html | truncatewords: 20 }}
      |         {% else %}
      |          	{{ post.content | strip_html | truncatewords: 60 }}
      |         {% endif %}
      |       </p>
      |   </div>
      | {% endfor %}

    .vert-link
      .link-container
        | <a class="link-brackets" href="{{site.baseurl}}/posts.html" rel="bookmark" title="Link to list of blog articles">See More...</a>
